<odoo>

    <record id="jcd_fruteria_proveedor_tree" model="ir.ui.view">
        <field name="name">jcd_fruteria.proveedor.tree</field>
        <field name="model">jcd_fruteria.proveedor</field>
        <field name="arch" type="xml">
            <tree string="Proveedores">
                <field name="name"/>
                <field name="email"/>
                
            </tree>
        </field>
    </record>


    <record id="jcd_fruteria_proveedor_form" model="ir.ui.view">
        <field name="name">jcd_fruteria.proveedor.form</field>
        <field name="model">jcd_fruteria.proveedor</field>
        <field name="arch" type="xml">
            <form string="Proveedor">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="email"/>

                        <field name="fruta_ids">
                            <tree>
                                <field name="name"/>
                                <field name="precio"/>
                                <field name="cantidad"/>
                                <field name="estado"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="action_jcd_fruteria_proveedor" model="ir.actions.act_window">
        <field name="name">Proveedores</field>
        <field name="res_model">jcd_fruteria.proveedor</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
