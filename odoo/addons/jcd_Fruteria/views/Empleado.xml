<odoo>
    <!-- Vista de lista para Empleado -->
    <record id="jcd_fruteria_empleado_tree" model="ir.ui.view">
        <field name="name">jcd_fruteria.empleado.tree</field>
        <field name="model">jcd_fruteria.empleado</field>
        <field name="arch" type="xml">
            <tree string="Empleados">
                <field name="name"/>
                <field name="edad"/>
                <field name="genero"/>
                <field name="fecha_nacimiento"/>
            </tree>
        </field>
    </record>

    <!-- Vista de formulario para Empleado -->
    <record id="jcd_fruteria_empleado_form" model="ir.ui.view">
        <field name="name">jcd_fruteria.empleado.form</field>
        <field name="model">jcd_fruteria.empleado</field>
        <field name="arch" type="xml">
            <form string="Empleado">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="edad"/>
                        <field name="genero"/>
                        <field name="fecha_nacimiento"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción para abrir la vista de Empleado -->
    <record id="action_jcd_fruteria_empleado" model="ir.actions.act_window">
        <field name="name">Empleados</field>
        <field name="res_model">jcd_fruteria.empleado</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menú para acceder a la vista de Empleado -->
    <menuitem id="menu_jcd_fruteria_empleado" name="Empleados" action="action_jcd_fruteria_empleado" sequence="20"/>
</odoo>