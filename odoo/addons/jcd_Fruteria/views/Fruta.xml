<odoo>
  <data>
    <record id="jcd_Fruteria.Fruta_tree" model="ir.ui.view">
      <field name="name">jcd_Fruteria.Fruta.tree</field>
      <field name="model">jcd_Fruteria.Fruta</field>
      <field name="arch" type="xml">
        <tree string="Fruta">
          <field name="name"></field>
          <!-- Podemos ver precio y moneda en una única columna -->
          <field name="precio" widget='monetary' options="{'currency_field': 'currency_id'}"/>
          <field name="cantidad"/>
          <!-- Los campos relacionales, como categoria_id, se pueden usar como cualquier otro en vistas.
          Odoo nos mostrará el atributo name del objeto relacionado. -->
          <field name="estado"/>
          <!--<field name="categoria_id" />-->
        </tree>
      </field>
    </record>
    <record id="jcd_Fruteria.Fruta_form" model="ir.ui.view">
      <field name="name">jcd_Fruteria.Fruta.form</field>
      <field name="model">jcd_Fruteria.Fruta</field>
      <field name="arch" type="xml">
        <form string="">
          <sheet>
            <group>
              <field name="name"></field>
              <field name="precio"></field>
              <!-- En el formulario podemos permitir la selección de la moneda -->
              <field name="cantidad" />
              <!-- Los campos relacionales, como categoria_id, se pueden usar como cualquier otro en vistas.
              Odoo nos mostrará el atributo name del objeto relacionado. -->
              <field name="estado" />
              <!-- Alternativa a hacer un tree anidado -->
              <field name="fruta_ids" widget="many2many_kanban">
                <kanban>
                    <field name="name"/>
                    <templates>
                        <t t-name="kanban-box">
                            <field name="name"/>
                        </t>
                    </templates>
                </kanban>
              </field>
            </group>
          </sheet>
        </form>
      </field>
    </record>
  </data>
</odoo>