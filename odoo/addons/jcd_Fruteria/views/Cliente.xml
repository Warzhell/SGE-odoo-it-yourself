<odoo>
    <!-- Vista de lista para Cliente -->
    <record id="jcd_fruteria_cliente_tree" model="ir.ui.view">
        <field name="name">jcd_fruteria.cliente.tree</field>
        <field name="model">jcd_fruteria.cliente</field>
        <field name="arch" type="xml">
            <tree string="Clientes">
                <field name="nombre"/>
                <field name="email"/>
                <field name="nacionalidad_id"/>
            </tree>
        </field>
    </record>

    <!-- Vista de formulario para Cliente -->
    <record id="jcd_fruteria_cliente_form" model="ir.ui.view">
        <field name="name">jcd_fruteria.cliente.form</field>
        <field name="model">jcd_fruteria.cliente</field>
        <field name="arch" type="xml">
            <form string="Cliente">
                <sheet>
                    <group>
                        <field name="nombre"/>
                        <field name="email"/>
                        <field name="nacionalidad_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción para abrir la vista de Cliente -->
    <record id="action_jcd_fruteria_cliente" model="ir.actions.act_window">
        <field name="name">Clientes</field>
        <field name="res_model">jcd_fruteria.cliente</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menú para acceder a la vista de Cliente -->
    <menuitem id="menu_jcd_fruteria_cliente" name="Clientes" action="action_jcd_fruteria_cliente" sequence="10"/>
</odoo>