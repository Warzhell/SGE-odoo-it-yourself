<odoo>
    <!-- Vista de lista para Fruta -->
    <record id="jcd_fruteria_fruta_tree" model="ir.ui.view">
        <field name="name">jcd_fruteria.fruta.tree</field>
        <field name="model">jcd_fruteria.fruta</field>
        <field name="arch" type="xml">
            <tree string="Frutas">
                <field name="name"/>
                <field name="precio"/>
                <field name="cantidad"/>
                <field name="estado"/>
                <field name="proveedor_id"/> <!-- Campo Many2one para el proveedor -->
            </tree>
        </field>
    </record>

    <!-- Vista de formulario para Fruta -->
    <record id="jcd_fruteria_fruta_form" model="ir.ui.view">
        <field name="name">jcd_fruteria.fruta.form</field>
        <field name="model">jcd_fruteria.fruta</field>
        <field name="arch" type="xml">
            <form string="Fruta">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="precio"/>
                        <field name="cantidad"/>
                        <field name="estado"/>
                        <field name="proveedor_id"/> 
                        <field name="imagen" widget="image" class="oe_avatar"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- AcciÃ³n para abrir la vista de Fruta -->
    <record id="action_jcd_fruteria_fruta" model="ir.actions.act_window">
        <field name="name">Frutas</field>
        <field name="res_model">jcd_fruteria.fruta</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>