<odoo>
  <data>
    <record id="jcd_Fruteria.Proveedor_tree" model="ir.ui.view">
      <field name="name">jcd_Fruteria.Proveedor.tree</field>
      <field name="model">jcd_Fruteria.Proveedor</field>
      <field name="arch" type="xml">
        <tree string="Cliente">
          <field name="name"></field>
          <field name="email"/>
          <field name="fruta_id"/>
        </tree>
      </field>
    </record>
    <record id="jcd_Fruteria.Proveedor_form" model="ir.ui.view">
      <field name="name">jcd_Fruteria.Proveedor.form</field>
      <field name="model">jcd_Fruteria.Proveedor</field>
      <field name="arch" type="xml">
        <form string="">
          <sheet>
            <group>
              <field name="name"></field>
              <field name="email"/>             
              <!-- Como alternativa a hacer un tree anidado, podemos definir un kanban -->
              <field name="fruta_id" widget="many2many_kanban">
                <kanban>
                    <field name="name"/>
                    <templates>
                        <t t-name="kanban-box">
                            <field name="name"/>
                        </t>
                    </templates>
                </kanban>
              </field>
            </group>
          </sheet>
        </form>
      </field>
    </record>
  </data>
</odoo>